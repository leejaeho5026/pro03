<%@ page import="java.util.*, java.lang.*" %>
<%@ page import="java.text.*, java.net.InetAddress" %>
<c:set var="path1" value="<%=request.getContextPath() %>" />
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8">
<title>자바스크립</title>
</head>
<body>
<div class="container">
	<h1 class="title"> JSON</h1>
	<p>자바스크립의 객체 형태로 </p>
	<br>
	
	<ul id = "lst">
	
	</ul>

	<button type = "button" id="reqBtn">데이터 가져오기 </button>
	
</div>	
	<script>
	$(document).ready(function(){
		var params = { item1:"leejaeho"};
		$("#reqBtn").click(function(){
			$.ajax({
				url:"${path1 }/JSONTest2.do",
				type:"post",
				dataType:"json",
				data:params,
				success:function(obj){
					var sam = obj;
					$("#lst").append("<li>아이디 : " +sam.name+"</li>");
					$("#lst").append("<li>포인트 : " +sam.point+"</li>");
					$("#lst").append("<li>가입일 : " +sam.resdate+"</li>");
				}
			});
		});
	});
	</script>


</body>
